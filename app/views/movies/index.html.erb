<div class="container p-0">
  <nav class="navbar navbar-dark bg-dark">
    <a href="#" class="navbar-brand">Movies</a>
    <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#createmodal"><i class="fas fa-plus-square"></i> Pelicula Nueva</button>
  </nav>
  <div class="modal fade" id="createmodal">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Crear una nueva Pelicula</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <%= form_for @movie do |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
            </div>
            <div class="form-group">
              <%= f.text_area :description, class: "form-control", placeholder: "Sinopsis" %>
            </div>
            <div class="form-group">
              <%= f.text_field :image_url, class: "form-control", placeholder: "Poster URL" %>
            </div>
            <div class="form-group">
              <%= f.text_field :days, class: "form-control", placeholder: "Dias de funcion" %>
            </div>
            <%= f.submit "Crear", class: "btn btn-dark btn-lg btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <div class="content">
        <div class="card-group">
          <% @movies.each do |movie| %>
          <div class="col-sm-4">
            <div class="card">
              <img src="<%= movie.image_url %>" class="img-fluid" alt="Spiderman poster">
              <div class="card-body">
                <h3 class="card-title"><%= movie.name %></h3>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
